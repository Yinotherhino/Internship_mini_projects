var num1 = parseFloat(prompt("Enter first Number: "));
var operator = prompt('Enter an operator (only +, _, * and / is allowed):' );
var num2 = parseFloat(prompt('Enter second number: '));
let result
switch(operator){
    case "+":
        result = num1 + num2;
        break;
    case "-":
        result = num1 - num2;
        break;
    case "*":
        result = num1 * num2;
        break;
    case "/":
        result = num1 / num2;
        break;
    default:
        result= "Please stick to the numbers and operator signs in your input"
}
alert(result)
